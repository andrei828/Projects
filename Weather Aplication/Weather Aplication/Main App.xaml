    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="2" Grid.ColumnSpan="2">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Image x:Name="Current_Day_Image" Grid.Row="2" Grid.Column="0" Source="{StaticResource ResourceKey=fair_day}"/>
            <TextBlock x:Name="Current_Temp" Grid.Column="1" Height="60" Width="80" FontSize="40"  FontWeight="DemiBold"  Foreground="White"/>

        </Grid>

        <Grid Grid.Row="3" Grid.ColumnSpan="2">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>

            <Label Grid.Row="1" Grid.Column="0" Foreground="White" Content="Min" HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="15"/>
            <Label Grid.Row="1" Grid.Column="1" Foreground="White" Content="Max" HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="15"/>
            <Label Grid.Row="1" Grid.Column="2" Foreground="White" Content="Hum" HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="15"/>
            <Label Grid.Row="1" Grid.Column="3" Foreground="White" Content="Wind" HorizontalContentAlignment="Center" VerticalAlignment="Center"
                   FontSize="15"/>
            <Label Grid.Row="1" Grid.Column="4" Foreground="White" Content="Speed" HorizontalContentAlignment="Center" VerticalAlignment="Center"
                   FontSize="15"/>

            <Label x:Name="Current_Temp_Min" Grid.Row="2" Grid.Column="0" Foreground="White" Content="..." HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="18"/>
            <Label x:Name="Current_Temp_Max" Grid.Row="2" Grid.Column="1" Foreground="White" Content="..." HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="18"/>
            <Label x:Name="Current_Humidity" Grid.Row="2" Grid.Column="2" Foreground="White" Content="..." HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="18"/>
            <Label x:Name="Current_Wind" Grid.Row="2" Grid.Column="3" Foreground="White" Content="..." HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="18"/>
            <Label x:Name="Current_Wind_Speed" Grid.Row="2" Grid.Column="4" Foreground="White" Content="..." HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="18"/>
        </Grid>

        <Grid Grid.Row="4" Grid.ColumnSpan="2">

            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Label x:Name="Next_day_1" Grid.Row="1" Content="..." Foreground="White" HorizontalAlignment="Center"
                   HorizontalContentAlignment="Center" VerticalAlignment="Top" VerticalContentAlignment="Top"
                   Margin="10,0,58,-5" Width="124" Grid.ColumnSpan="2"
                   FontSize="18" FontWeight="Light"/>

            <Image x:Name="Next_day_1_Image"  Grid.Row="1" Grid.Column="1" 
                   Source="{StaticResource ResourceKey=ds_clear_day}" />
            
            <Label x:Name="Next_day_1_Temp_Max" Grid.Row="1" Grid.Column="2" FontSize="15" Foreground="White" />
            <Label x:Name="Next_day_1_Temp_Min" Grid.Row="1" Grid.Column="3" FontSize="15" Foreground="White" />

            <Label x:Name="Next_day_2" Grid.Row="2" Content="..." Foreground="White" HorizontalAlignment="Center"
                   HorizontalContentAlignment="Center" VerticalAlignment="Top" VerticalContentAlignment="Top"
                   Margin="10,0,58,-5" Width="124" Grid.ColumnSpan="2"
                   FontSize="18" FontWeight="Light"/>

            <Image x:Name="Next_day_2_Image" Grid.Row="2" Grid.Column="1" 
                   Source="{StaticResource ResourceKey=ds_heavy_rain_day_night}" />
            
            <Label x:Name="Next_day_2_Temp_Max" Grid.Row="2" Grid.Column="2" FontSize="15" Foreground="White" />
            <Label x:Name="Next_day_2_Temp_Min" Grid.Row="2" Grid.Column="3" FontSize="15" Foreground="White" />

        </Grid>

        <Grid Grid.Row="5" Grid.ColumnSpan="2">

            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Label x:Name="Next_day_3" Grid.Row="0" Content="..." Foreground="White" HorizontalAlignment="Center"
                   HorizontalContentAlignment="Center"  VerticalAlignment="Top" VerticalContentAlignment="Top"
                   Margin="10,0,58,-5" Width="124" Grid.ColumnSpan="2"
                   FontSize="18" FontWeight="Light"/>

            <Image x:Name="Next_day_3_Image" Grid.Row="0" Grid.Column="1" 
                   Source="{StaticResource ResourceKey=ds_fog_sun_day}" />
            <Label x:Name="Next_day_3_Temp_Max" Grid.Row="0" Grid.Column="2" FontSize="15" Foreground="White" />
            <Label x:Name="Next_day_3_Temp_Min" Grid.Row="0" Grid.Column="3" FontSize="15" Foreground="White" />

            <Label x:Name="Next_day_4" Grid.Row="1" Content="..." Foreground="White" HorizontalAlignment="Center" 
                   HorizontalContentAlignment="Center" VerticalAlignment="Top" VerticalContentAlignment="Top" 
                   Margin="10,0,58,-5" Width="124" Grid.ColumnSpan="2"
                   FontSize="18" FontWeight="Light"/>

            <Image x:Name="Next_day_4_Image" Grid.Row="1" Grid.Column="1" 
                   Source="{StaticResource ResourceKey=ds_heavy_snow_day_night}" />
            <Label x:Name="Next_day_4_Temp_Max" Grid.Row="1" Grid.Column="2" FontSize="15" Foreground="White" />
            <Label x:Name="Next_day_4_Temp_Min" Grid.Row="1" Grid.Column="3" FontSize="15" Foreground="White" />
        </Grid>

        <Label x:Name="City_Name" Foreground="White" Content="Bucharest" Grid.ColumnSpan="2" 
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.RowSpan="2"
               TextOptions.TextHintingMode="Fixed" TextOptions.TextFormattingMode="Display"
               FontSize="50" Margin="10,42,10,44" Width="300"/>

        <Image x:Name="search_image" Width="30" Height="30" Stretch="UniformToFill" MouseUp="Search"
               Source="{StaticResource ResourceKey=search}" Margin="3,3,287,53.667" />

        <StackPanel FocusManager.FocusedElement="{Binding ElementName=TextBox_Search}">
            <TextBox x:Name="TextBox_Search" Width="150" Height="30" Background="Transparent" Margin="14,6,156,50.667"
                 BorderThickness="0" TextWrapping="Wrap" SelectionBrush="White" CaretBrush="White"
                 FontSize="20" Foreground="White" Focusable="True" KeyDown="GetCityString" KeyUp="HideSuggestion"/>
        </StackPanel>
        
        <Label x:Name="Suggest_City" Width="150" Height="30" Margin="12,30,158,26.667"
               FontSize="18" FontWeight="Bold" Foreground="White" Background="Transparent"
               Visibility="Hidden" MouseDown="UseSuggestion"/>

        <Label x:Name="Current_Status" Content="..." Foreground="White"  HorizontalContentAlignment="Center" 
               VerticalContentAlignment="Center" Margin="0,10,0,76" Grid.Row="1" Grid.RowSpan="2" 
               FontSize="25" FontWeight="Light" />

        <Label x:Name="Current_Time" Content="..." Foreground="White"  HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center" Margin="171,6,4,45.667" 
               FontSize="15" FontWeight="ExtraLight"/>
    </Grid>
</Page>
