<Window x:Class="Magazin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Magazin"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <UniformGrid Grid.Row="0" Columns="4">
            <Button Content="Produse"  Click="OpenProduse"/>
            <Button Content="Angajati" Click="OpenAngajati"/>
            <Button Content="Clienti"  Click="OpenClienti"/>
            <Button Content="Vanzari"  Click="OpenVanzari"/>
        </UniformGrid>

        <UniformGrid Grid.Row="1" Rows="3">
            <Label VerticalAlignment="Center">Magazin</Label>
            <Label VerticalAlignment="Center">Produse vandute</Label>
            <Label VerticalAlignment="Center">Clienti</Label>
        </UniformGrid>
        
    </Grid>
</Window>
